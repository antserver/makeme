/*
    lib.me - Library probe
 */

Me.extension({
    lib: { 
        description: 'Library Archive Tool',
        path: function (extension) {
            let path: Path = extension.withpath || ((me.platform.like == 'windows') ? 'lib.exe' : 'ar')
            if (!me.options.gen) {
                path = probe(path, { fullpath: true, search: me.extensions.compiler.search, default: path })
            }
            return path
        }
        extensions: ['compiler'],
    },
})
