/*
    rc.me - Resource compiler probe
 */

Me.extension({
    rc: {
        description: 'Windows Resource Compiler',
        path: function (extension) {
            return probe(extension.withpath || 'rc.exe', {
                fullpath: true, 
                search: me.extensions.winsdk.search, 
                default: 'rc.exe'
            })
        },
        extensions: [ 'winsdk' ],
    },
})
