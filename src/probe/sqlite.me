/*
    sqlite.me - SQLite probe
 */

Me.extension({
    sqlite: {
        description: 'SQLite Database',
        path: function(ext) {
            let path = me.dir.paks.join('sqlite')
            if (path.exists) {
                return path
            }
            throw "Cannot find " + path
        }
        depends: [ 'libsql' ],
    },
})
