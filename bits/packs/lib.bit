/*
    lib.bit - Library package for Bit
 */

Bit.pack({
    lib: { 
        description: 'Library Archive Tool',
        path: function (pack) {
            let name = pack.withpath || ((bit.platform.like == 'windows') ? 'lib.exe' : 'ar')
            return probe(name, { fullpath: true, search: bit.packs.compiler.search, default: name })
        },
        requires: ['compiler'],
    },
})
